<div class="page-header"><h1>Forgotten password</h1></div>

<p>Please insert your email to receive instructions on password reset </p>

<%= form_for :user, url: password_resets_path do |f| %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <%= f.submit 'Send instructions', class: 'btn btn-primary btn-lg' %>
<% end %>